        <TextView
            android:text="@string/JobRef"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/JobID"
            android:text=""
            android:ems="5"
            android:layout_column="2"
            android:layout_row="1" />
