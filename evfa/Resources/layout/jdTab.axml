        <TextView
            android:text="Job Date"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/txtJobDate"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="right"
            android:ems="5" />
        <TextView
            android:text="Job Time"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/txtJobTime"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_gravity="right"
            android:ems="5" />
        <TextView
            android:text="Team"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/txtTeam"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="left"
            android:ems="10"
            android:layout_columnSpan="3" />
        <TextView
            android:text="Location"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/txtLocation"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_columnSpan="3"
            android:ems="10" />
        <TextView
            android:text="Priority"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/txtPriority"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_gravity="left"
            android:ems="10"
            android:layout_columnSpan="3" />
        <TextView
            android:text="Category"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/txtCategory"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_gravity="left"
            android:ems="10"
            android:layout_columnSpan="3" />
        <TextView
            android:text="Description"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/txtJobDescription"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_gravity="left"
            android:ems="10"
            android:layout_columnSpan="3" />
        <TextView
            android:text="Job Status"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/txtStatus"
            android:layout_row="8"
            android:layout_column="2"
            android:layout_gravity="left"
            android:ems="10"
            android:layout_columnSpan="3" />
        <Button
            android:id="@+id/btnSave"
            android:layout_column="1"
            android:layout_row="11"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:text="Save"
            android:layout_gravity="left" />
        <Button
            android:id="@+id/btnNewPrf"
            android:layout_column="4"
            android:layout_row="11"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:text="New ePRF"
            android:layout_gravity="left" />
